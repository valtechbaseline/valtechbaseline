@using Sitecore.Shell
@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<ValtechBaseLine.Model.Common.IPageModel>
<div class="container">
    <div class="search-results article-listing">

        <h1 class="intro-big-title alignc">@Model.Headline</h1>

        <div class="two-column">
            <div class="left-col">
                @Html.Sitecore().Placeholder("Left")
                @if (Model.BackgroundImage != null)
                {
                    <img src="@Model.BackgroundImage.Src" class="background" />
                }
            </div>
            <div class="right-col">
                @Html.Sitecore().Placeholder("Right")
                <div>
                </div>
            </div>
        </div>
    </div>
</div>

